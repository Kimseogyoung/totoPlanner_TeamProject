<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/communityboard_view"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/refresh_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로고침"/>

            <Button
                android:id="@+id/cupload_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업로드" />

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="뒤로가기" />

        </LinearLayout>
    </LinearLayout>

    // 게시글 업로드
    <LinearLayout
        android:id="@+id/cuploadTap"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:background="#C94C91E8"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="right">

            <EditText
                android:id="@+id/nickname_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="10"
                android:background="#E2EBF6"
                android:hint="닉네임 작성"/>

            <Button
                android:id="@+id/cuploadtapExit_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:text="x"
                android:textSize="15dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/ctitle_Text"
            android:layout_width="280dp"
            android:layout_height="23dp"
            android:layout_margin="10dp"

            android:layout_weight="1"
            android:background="#E2EBF6"
            android:hint="제목을 작성하세요"
            android:padding="5dp" />


        <EditText
            android:layout_height="0dp"
            android:layout_weight="6"
            android:id="@+id/cedit_Text"
            android:layout_width="280dp"

            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="#E2EBF6"
            android:hint="내용을 작성하세요" />

        <LinearLayout
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:gravity="right">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업로드"
                android:id="@+id/cupload_real_btn"/>
        </LinearLayout>
    </LinearLayout>




</FrameLayout>